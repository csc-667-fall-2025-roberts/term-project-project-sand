  "main": "index.js",
  "scripts": {
    "build:backend": "tsc && xcopy /E /I /Y src\\backend\\views dist\\backend\\views",
    "build:frontend": "if not exist dist\\public\\js mkdir dist\\public\\js && esbuild src/frontend/entrypoint.ts --bundle --outfile=dist/public/js/bundle.js --sourcemap --target=es2020",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/public/css/styles.css --minify",
    "build": "if exist dist rmdir /s /q dist && npm run build:css && npm run build:backend && npm run build:frontend",
    "dev:backend": "nodemon --exec ts-node src/backend/server.ts",
    "dev:frontend": "npm run build:frontend -- --watch",
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ./dist/public/css/styles.css --watch",
    "dev:live": "browser-sync start --proxy 'http://localhost:3005' --files 'src/backend/views/**/*.ejs' 'src/frontend/**/*.ts' 'dist/public/**/*' --no-ui --no-open",
    "dev:public": "if not exist dist\\public\\css mkdir dist\\public\\css",
    "dev": "npm run dev:public && npm run build:css && concurrently --names \"backend,frontend,css,live\" --prefix-colors \"green,blue,yellow,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:css\" \"npm run dev:live\"",
    "format": "prettier --plugin=prettier-plugin-ejs --write --ignore-unknown src",
    "lint": "eslint",
    "migrate:create": "node-pg-migrate create -js ts --",
    "migrate:down": "node-pg-migrate down",
    "migrate:up": "tsx node_modules/node-pg-migrate/bin/node-pg-migrate up",
    "start": "node dist/backend/server.js"
  },
